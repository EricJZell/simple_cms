<% @page_title = "Pages" %>
<%= link_to("<< Back to Subjects", subjects_path, class: 'back-link') %>
<div class="pages index">
  <h2>Pages</h2>

  <%= link_to("Add new page", new_subject_page_path(@subject), class: 'action new') %>

  <table class="listing" summary="Page List">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Permalink</th>
      <th>Visible</th>
      <th>Subject</th>
      <th>Sections</th>
      <th>Action</th>
    </tr>
    <% @pages.each do |page| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td> <%= page.position %> </td>
        <td> <%= page.name %> </td>
        <td> <%= page.permalink %> </td>
        <td class="center"> <%= status_tag(page.visible) %> </td>
        <td class="center"> <%= page.subject.name %> </td>
        <td class="center"> <%= page.sections.size %> </td>
        <td class="actions">
          <%= link_to("Show", subject_page_path(@subject, page), class: 'action show') %>
          <%= link_to("Edit", edit_subject_page_path(@subject, page), class: 'action edit') %>
          <%= link_to("Delete", delete_subject_page_path(@subject, page), class: 'action delete') %>
          <%= link_to("View Sections", subject_page_sections_path(@subject, page), class: 'action show') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>

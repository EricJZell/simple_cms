<% @page_title = "New Page" %>
<%= link_to("Back to List", subject_pages_path(@subject), class: 'back-link') %>

<div class="pages new">
  <h2>Create page</h2>

  <%= form_for([@subject, @page]) do |f| %>
    <%= render(partial: 'form', locals: {f: f}) %>
    <div class="form-buttons">
      <%= submit_tag("Create Page") %>
    </div>
  <% end %>
</div>

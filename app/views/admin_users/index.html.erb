<% @page_title = "Admin Users" %>

<%= link_to("<< Back to Admin Menu", {controller: :access, action: :index}, class: 'back-link') %>

<div class="admin_users index">
  <h2>Admin Users</h2>

  <%= link_to("Add new Admin User", {action: :new}, class: 'action new') %>
  <div><%= pluralize(@admin_users.size, 'admin user')%> found</div>

  <table class="listing" summary="Admin User List">
    <tr class="header">
      <th>Name</th>
      <th>Email</th>
      <th>Username</th>
      <th>Actions</th>
    </tr>
    <% @admin_users.each do |user| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td> <%= user.name %> </td>
        <td> <%= mail_to(user.email) %> </td>
        <td> <%= user.username %> </td>
        <td class="actions">
          <%= link_to("Edit", {action: 'edit', id: user.id}, class: 'action edit') %>
          <%= link_to("Delete", {action: 'delete', id: user.id}, class: 'action delete') %>
        </td>
      </tr>
    <% end %>
  </table>


</div>

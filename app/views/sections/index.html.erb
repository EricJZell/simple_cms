<% @page_title = "Sections" %>
<%= link_to("<< Back to Page", subject_pages_path(@page.subject), class: 'back-link') %>
<div class="sections index">
  <h2>Sections</h2>

  <%= link_to("Add new section", new_subject_page_section_path(@page.subject, @page), class: 'action new') %>

  <table class="listing" summary="Section List">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Name</th>
      <th>Visible</th>
      <th>Content Type</th>
      <th>Page</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td> <%= section.position %> </td>
        <td> <%= section.name %> </td>
        <td class="center"> <%= status_tag(section.visible) %> </td>
        <td> <%= section.content_type %> </td>
        <td class="center"> <%= section.page.name %> </td>
        <td class="actions">
          <%= link_to("Show", subject_page_section_path(@page.subject, @page, section), class: 'action show') %>
          <%= link_to("Edit", edit_subject_page_section_path(@page.subject, @page, section), class: 'action edit') %>
          <%= link_to("Delete", delete_subject_page_section_path(@page.subject, @page, section), class: 'action delete') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
